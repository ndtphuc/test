<h3>{{viewTitle}}</h3>
<form action="/supplier" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{supplier._id}}">
    <div class="form-group">
        <label>Supplier Name</label>
        <input type="text" class="form-control" name="supName" value="{{supplier.supName}}" placeholder="Supplier Name">
        <div class="text-danger">
            {{supplier.supNameError}}
        </div>
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="supAddress" value="{{supplier.supAddress}}" placeholder="Address">
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success"><i class="fa fa-database"></i>Submit</button>
        <a href="supplier/list" class="btn btn-info">
            <i class="fa fa-list-alt"></i>View All
        </a>
    </div>
</form>