<h3 style="text-align: center"> 
    <img src="https://cdn-icons-png.flaticon.com/128/2729/2729996.png" style="width:35px">
    Suppliers List  
</h3>

<a href="/supplier" class="btn btn-warning">
    <i class="fa fa-plus"> </i> Add new supplier
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Supplier Name</th>
            <th>Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.supName}}</td>
            <td>{{this.supAddress}}</td>
            <td>
                <a class="btn-edit" href="/supplier/{{this._id}}">
                    <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
                </a>
                <a class="btn btn-delete" href="/supplier/delete/{{this._id}}"
                    onclick="return confirm('Are you sure to delete this record?');">
                    <i class="fa fa-trash fa-lg" aria-hidden="true">

                    </i>
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>