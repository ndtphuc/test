<h3 style="text-align: center"> 
    <img src="https://cdn-icons-png.flaticon.com/128/2729/2729996.png" style="width:35px">
    Toys List  
</h3>

<a href="/toy" class="btn btn-warning">
    <i class="fa fa-plus"> </i> Add new toy
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Toy Name</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Supplier</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.toyName}}</td>
            <td>{{this.description}}</td>
            <td>{{this.quantity}}</td>
            <td>{{this.supplier}}</td>
            <td>{{this.price}}</td>            
            <td>
                <a class="btn-edit" href="/toy/{{this._id}}">
                    <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
                </a>
                <a class="btn btn-delete" href="/toy/delete/{{this._id}}"
                    onclick="return confirm('Are you sure to delete this record?');">
                    <i class="fa fa-trash fa-lg" aria-hidden="true">

                    </i>
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>